<html lang="en">
  <head>
    <style>
      body { background-color: #121212; color: #ffffff; } .blog-list-title {
      color: #00bcd4; font-size: 2rem; font-weight: bold; margin-bottom: 2rem; }
      .blog-card { background-color: #1e1e1e; border-radius: 10px; padding:
      1.5rem; margin-bottom: 1.5rem; transition: transform 0.2s ease;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.4); } .blog-card:hover { transform:
      scale(1.01); } .blog-card h2 { color: #ffffff; font-size: 1.5rem; }
      .blog-link { text-decoration: none; color: #00bcd4; font-weight: 500;
      font-size: 0.95rem; } .blog-link:hover { text-decoration: underline; }
    </style>
  </head>
  <body>

    <div class="container mt-5">
      <div class="text-center blog-list-title">All Blog Posts</div>

      {{#each blogs}}
        <div class="blog-card">
          <a
            class="blog-link"
            href="/blogpost/{{this.slug}}"
          >/blogpost/{{this.slug}}</a>
          <h2>{{this.title}}</h2>
        </div>
      {{/each}}

      {{#unless blogs.length}}
        <div class="text-center text-muted">No blogs found.</div>
      {{/unless}}
    </div>
  </body>
</html>